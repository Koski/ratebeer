<p id="notice"><%= notice %></p>


  <h2><%= @style.name %></h2>
  


<p>
  <strong>Description:</strong>
  <quote>
  	<%= @style.description %>
  </quote>
</p>

<% if not @beers.empty?%>
	<p>
		<strong>Beers:</strong>
	</p>
	<% @beers.each do |beer| %>
		<% if @style.id == beer.style_id %>
			<li><%= beer.name %></li>
		<% end %>
	<% end %>
<% end %>

<%= edit_and_destroy_buttons(@style) %>

<p>
	<%= link_to 'Back', styles_path %>
</p>