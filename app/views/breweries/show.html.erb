<p id="notice"><%= notice %></p>

<h2><%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label label-info">retired</span>
  <% end %>
</h2>
<p>
  <i>Established at <%= @brewery.year %></i>
</p>

<p>
    <strong>Beer count:</strong>
    <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
      <%= link_to beer.name,beer %><br>
  <% end %>
</p>
<p>
  <% if @brewery.ratings.empty? %>
  <% else %>
      has <%= @brewery.ratings.count %> <%= "rating".pluralize(@brewery.ratings.count) %>, average: <%= round(@brewery.average_rating) %>
  <% end %>
</p>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary btn-sm" %>
<%= edit_and_destroy_buttons(@brewery) %>
<p>
  <%= link_to 'Back', breweries_path %>
</p>
