<p id="notice"><%= notice %></p>

<h2><%= @brewery.name %>
  <% if not @brewery.active %>
    <span class="label label-info">retired</span>
  <% end %>
</h2>
<p>
  <i>Established at <%= @brewery.year %></i>
</p>

<p>
    <strong>Beer count:</strong>
    <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
      <%= link_to beer.name,beer %><br>
  <% end %>
</p>
<p>
  <% if @brewery.ratings.empty? %>
  <% else %>
      has <%= @brewery.ratings.count %> <%= "rating".pluralize(@brewery.ratings.count) %>, average: <%= @brewery.average_rating %>
  <% end %>
</p>
<% if not current_user.nil? %>
          <%= link_to 'Edit', edit_brewery_path(@brewery), class:'btn-warning btn-sm' %>
          <%= link_to 'Destroy', @brewery, class:'btn-danger btn-sm' ,method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<br>
<%= link_to 'Back', breweries_path %>
