<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>
<p>
    <% if @beer.ratings.empty? %>
        beer hasn't been rated yet!
    <% else %>
        has <%= @beer.ratings.count %> <%= "rating".pluralize(@beer.ratings.count) %>, average: <%= @beer.average_rating %>
    <% end %>
</p>

<% if current_user %>
  
  <h4>give a rating:</h4>

  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit class:'btn btn-primary btn-sm' %>
  <% end %>


  <p>
    <%= link_to 'Edit', edit_beer_path(@beer), class:'btn btn-warning btn-sm' %>
    <%= link_to 'Destroy', @beer, class:'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<%end%>
<%= link_to 'Back', beers_path %>
